#include<stdio.h>
int main()
{
	int n1,n2;
	char opertor;
	printf("enter the first number:");
	scanf("%d",&n1);
	printf("enter the second number:");
	scanf("%d",&n2);
	printf("enter the choice:");
	scanf(" %c",&opertor);
	
	switch(opertor)
	{
		case '+':
			printf("%d",n1+n2);
			break;
		case '-':
			printf("%d",n1-n2);
			break;
		case '*':
			printf("%d",n1*n2);
			break;
		case '/':
			if(n2 != 0)
			{
				printf("%d",n1/n2);
			}
			else
			{
				printf("error in n2");
			}
			break;	
		default:
			printf("invaild operation.");
			break;		
	}
}
